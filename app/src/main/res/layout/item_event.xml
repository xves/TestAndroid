<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/fundo_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgound_scroll_tela_sobre">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="@dimen/num_5">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/dim_40"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/num_1"
                        android:elevation="@dimen/dim_5"
                        android:scaleType="fitXY"
                        android:src="@drawable/sem_foto" />

                    <LinearLayout
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/num_3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dim_10">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="24"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dim_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_5"
                            android:text="Date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dim_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="@dimen/num_1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_check_in"
                            android:layout_width="@dimen/dim_30"
                            android:layout_height="@dimen/dim_30"
                            android:layout_marginBottom="@dimen/dim_5"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/dim_10"
                            android:src="@drawable/ic_location_on_24" />

                        <ImageView
                            android:id="@+id/img_share"
                            android:layout_gravity="end"
                            android:layout_width="@dimen/dim_30"
                            android:layout_height="@dimen/dim_30"
                            android:layout_marginEnd="@dimen/dim_10"
                            android:src="@drawable/ic_share_24" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>